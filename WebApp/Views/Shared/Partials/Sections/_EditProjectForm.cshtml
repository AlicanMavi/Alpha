@model EditProjectForm

<div id="editProjectModal" class="modal project-modal">
	<div class="modal-content">

		<div class="modal-header">
			<h3>Edit Project</h3>
			<button type="button" class="btn-close" data-close="true"></button>
		</div>

		<form novalidate method="post" asp-action="Edit" asp-controller="Projects">
			<input type="hidden" asp-for="Id" />

			<div class="form-group">
				<label asp-for="ProjectName"></label>
				<div class="field-group">
					<input asp-for="ProjectName" />
					<span asp-validation-for="ProjectName"></span>
				</div>
			</div>

			<div class="form-group">
				<label asp-for="ClientName"></label>
				<div class="field-group">
					<input asp-for="ClientName" />
					<span asp-validation-for="ClientName"></span>
				</div>
			</div>

			<div class="form-group">
				<label asp-for="Description"></label>
				<div class="field-group">
					<textarea asp-for="Description" class="form-control"></textarea>
					<span asp-validation-for="Description"></span>
				</div>
			</div>

			<div class="project-form-date d-flex gap-3">
				<div class="form-group flex-fill">
					<label asp-for="StartDate"></label>
					<div class="field-group">
						<input asp-for="StartDate" type="date" class="form-control" />
						<span asp-validation-for="StartDate"></span>
					</div>
				</div>
				<div class="form-group flex-fill">
					<label asp-for="EndDate"></label>
					<div class="field-group">
						<input asp-for="EndDate" type="date" class="form-control" />
						<span asp-validation-for="EndDate"></span>
					</div>
				</div>
			</div>


			<div class="form-group">
				<label asp-for="Budget"></label>
				<div class="input-group">
					<span class="input-group-text">
						<i class="fa-solid fa-dollar-sign"></i>
					</span>
					<input asp-for="Budget" type="number" class="form-control" required />
					<span asp-validation-for="Budget"></span>
				</div>
			</div>

			<button type="submit" class="btn btn-blue btn-submit">Edit</button>
		</form>

	</div>
</div>

