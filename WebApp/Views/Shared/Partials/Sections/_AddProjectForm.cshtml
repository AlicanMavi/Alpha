@model AddProjectForm

<div id="addProjectModal" class="modal project-modal" style="display:none;">
  <div class="modal-content">
    <div class="modal-header">
      <h3>Add Project</h3>
      <button type="button" class="btn-close" data-close="true"></button>
    </div>
    <form method="post" asp-controller="Projects" asp-action="Add" novalidate>
      @Html.AntiForgeryToken()
      <div asp-validation-summary="All"></div>

      <!-- ProjectName -->
      <div class="form-group">
        <label asp-for="ProjectName"></label>
        <div class="field-group">
          <input asp-for="ProjectName" class="form-control" />
          <span asp-validation-for="ProjectName"></span>
        </div>
      </div>

      <!-- ClientName -->
      <div class="form-group">
        <label asp-for="ClientName"></label>
        <div class="field-group">
          <input asp-for="ClientName" class="form-control" />
          <span asp-validation-for="ClientName"></span>
        </div>
      </div>

      <!-- Description -->
      <div class="form-group">
        <label asp-for="Description"></label>
                <div class="field-group">
          <textarea asp-for="Description" class="form-control"></textarea>
          <span asp-validation-for="Description"></span>
        </div>
      </div>

      <!-- Start & End date -->
      <div class="project-form-date d-flex gap-3">
        <div class="form-group flex-fill">
          <label asp-for="StartDate"></label>
          <div class="field-group">
            <input asp-for="StartDate" type="date" class="form-control" />
            <span asp-validation-for="StartDate"></span>
          </div>
        </div>
        <div class="form-group flex-fill">
          <label asp-for="EndDate"></label>
          <div class="field-group">
            <input asp-for="EndDate" type="date" class="form-control" />
            <span asp-validation-for="EndDate"></span>
          </div>
        </div>
      </div>

      <!-- Budget -->
        <div class="form-group">
            <label asp-for="Budget"></label>
            <div class="input-group">
                <span class="input-group-text">
                    <i class="fa-solid fa-dollar-sign"></i>
                </span>
				<input asp-for="Budget" type="number" class="form-control" required />
                <span asp-validation-for="Budget"></span>
            </div>
            
        </div>

      <button type="submit" class="btn btn-blue btn-submit">Create</button>
    </form>
  </div>
</div>

@section Scripts {
  <partial name="_ValidationScriptsPartial" />
}
